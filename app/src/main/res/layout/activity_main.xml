<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context="i4evercai.com.demo.MainActivity">


        <Button
            android:id="@+id/btnLoadingDialog"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/support_btn_white_corner_gray_stroke"
            android:text="显示加载中对话框(5秒后关闭)" />

        <Button
            android:id="@+id/btnRvAdpter"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/support_btn_white_corner_primary_stroke"
            android:text="Base RecyclerView Adapter" />

        <com.i4evercai.android.support.widget.CornerImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/banner"
            android:topLeftRadius="8dp" />

        <com.i4evercai.android.support.widget.CornerImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/banner"
            android:topLeftRadius="8dp"
            android:topRightRadius="8dp" />

        <com.i4evercai.android.support.widget.CornerImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/banner"
            android:radius="8dp" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
