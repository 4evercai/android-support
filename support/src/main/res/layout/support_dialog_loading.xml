<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/support_bg_loading_dialog"
    android:gravity="center"
    android:minHeight="120dp"
    android:minWidth="120dp"
    android:layout_gravity="center"
    android:padding="8dp"
    android:orientation="vertical">


    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.i4evercai.android.support.widget.LoadingTextView
        android:id="@+id/tvMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/support_loading_dialog_msg"
        android:textColor="@color/support_loading_dialog_msg_text"
        android:textSize="@dimen/support_loading_dialog_msg_text" />
</LinearLayout>
